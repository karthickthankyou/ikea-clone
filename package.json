{
  "name": "ikea-clone",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "next-lint": "next lint",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prettier": "prettier . --ignore-path .gitignore",
    "format:check": "npm run prettier -- --check",
    "format:fix": "npm run prettier -- --write",
    "lint": "eslint --ext .tsx,.ts .",
    "type:check": "tsc",
    "validate": "run-p lint type:check format:check",
    "prepare": "husky install",
    "chromatic": "npx chromatic --project-token=70cc3e8213a7",
    "gen-tailwind": "npx tailwindcss -i ./src/globals.css -o ./cypress/plugins/globals.css",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "cypress:unit": "npm run gen-tailwind && cypress open-ct",
    "e2e": "start-server-and-test dev http://localhost:3000 cypress",
    "e2e:headless": "start-server-and-test dev http://localhost:3000 cypress:headless"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
